<!-- Banner Section -->
<section class="bg-cover bg-center py-24" style="background-image: url('Images/Static/HomeFormBG.png');">
    <div class="max-w-screen-xl mx-auto mt-32 px-4">
        <div class="text-left">
            <h3 class="text-3xl md:text-5xl mb-6">Join us & Explore Thousands of Jobs</h3>
            <p class="text-gray-500">Find Jobs, Employment & Career Opportunities</p>
        </div>

        <!-- Job Search Form -->
        <div class="mt-10 bg-white rounded-lg shadow-lg p-6 w-full mx-auto">
            <form method="post" action="job-list-v10.html" class="flex flex-col md:flex-row items-center gap-4">
                <!-- Job Title Input -->
                <div class="relative flex-1 w-full md:w-auto">
                    <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" name="job_title" placeholder="Job title, keywords, or company"
                        class="w-full pl-10 pr-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>

                <!-- Location Input -->
                <div class="relative flex-1 w-full md:w-auto">
                    <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                        <i class="fas fa-map-marker-alt"></i>
                    </span>
                    <input type="text" name="location" placeholder="City or postcode"
                        class="w-full pl-10 pr-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>

                <!-- Category Select -->
                <div class="relative flex-1 w-full md:w-auto">
                    <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                        <i class="fas fa-briefcase"></i>
                    </span>
                    <select name="category"
                        class="w-full pl-10 pr-8 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 appearance-none">
                        <option value="">All Categories</option>
                        <option value="accounting">Accounting / Finance</option>
                        <option value="automotive">Automotive Jobs</option>
                        <option value="customer">Customer Service</option>
                        <option value="design">Design</option>
                        <option value="development">Development</option>
                        <option value="health">Health and Care</option>
                        <option value="marketing">Marketing</option>
                        <option value="project">Project Management</option>
                    </select>
                    <span class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
                        <i class="fas fa-chevron-down"></i>
                    </span>
                </div>

                <!-- Submit Button -->
                <div class="w-full md:w-auto">
                    <button type="submit"
                        class="w-full md:w-auto filled-button-color text-white px-8 py-3 rounded-lg hover:filled-button-color transition focus:outline-none">
                        Find Jobs
                    </button>
                </div>
            </form>
        </div>

        <!-- Fun Fact Section -->
        <div class="mt-12 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 text-left w-full hidden sm:grid">
            <div class="text-center">
                <p class="text-2xl sm:text-3xl mb-2">97216</p>
                <p class="text-gray-500">Jobs</p>
            </div>
            <div class="text-center">
                <p class="text-2xl sm:text-3xl mb-2">4782</p>
                <p class="text-gray-500">Members</p>
            </div>
            <div class="text-center">
                <p class="text-2xl sm:text-3xl mb-2">5322</p>
                <p class="text-gray-500">Resume</p>
            </div>
            <div class="text-center">
                <p class="text-2xl sm:text-3xl mb-2">6329</p>
                <p class="text-gray-500">Company</p>
            </div>
        </div>
    </div>
</section>
