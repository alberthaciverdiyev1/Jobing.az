<section>
    <div class="container flex flex-col lg:flex-row mt-24 mx-auto h-auto lg:h-screen w-11/12 lg:w-9/12">
        <div class="lg:w-1/4 bg-white px-7 py-6 rounded-xl mb-6 lg:mb-0 lg:mr-3 overflow-y-scroll scroll-smooth custom-scroll hidden sm:block"
            id="filter-section">
            <!-- Filter Header -->
            <div class="flex justify-between py-1 font-sans font-semibold text-base rounded-md">
                <span class="text-gray-800">All Filters</span>
                <span class="text-gray-800">Applied</span>
            </div>
            <!-- Search -->
            <div class="mt-3 flex relative">
                <input type="text" class="border-2 h-8 w-full pr-8 rounded-lg border-custom">
                <button>
                    <i class="fa-solid fa-magnifying-glass absolute right-2 top-1/2 transform -translate-y-1/2"></i>
                </button>
            </div>

            <!-- Search end? -->
            <!-- Department Filters -->
            <div class="mt-3">
                <div
                    class="color flex justify-between border-t border-gray-400 py-3 font-sans text-sm text-gray-800 items-center">
                    <p class="font-semibold text-base">Department</p>
                    <i class="fa-solid fa-chevron-up text-gray-800 "></i>
                </div>

                <div class="ml-3">
                    <!-- Checkbox List -->
                    <div class="space-y-2" id="categoryList"> </div>

                    <span class="ml-2 mt-4 block text-blue-400 hover:underline cursor-pointer" id="show-more-categories">View More</span>
                </div>
                <div class="border-b border-gray-400 mt-3"></div>
            </div>
            <!-- Min max salary slider -->

            <div class="mt-3">
                <div class="color flex justify-between font-sans text-gray-800 items-center">
                    <p class="font-semibold text-base">Salary</p>
                    <i class="fa-solid fa-chevron-up text-gray-800"></i>
                </div>
                <div class="min-max-slider relative mx-auto mt-6">
                    <div class="absolute inset-x-0 top-0">
                        <div class="flex justify-between mt-4">
                            <span class="value lower block font-semibold text-gray-800">0</span>
                            <span class="value upper block font-semibold text-gray-800">3000</span>
                        </div>
                    </div>
                    <input id="min"
                        class="min appearance-none cursor-pointer absolute inset-0 h-1 bg-transparent z-10"
                        name="min" type="range" step="1" min="0" max="3000" />
                    <input id="max"
                        class="max appearance-none cursor-pointer absolute inset-0 h-1 bg-transparent z-10"
                        name="max" type="range" step="1" min="0" max="3000" />

                    <div class="absolute inset-0 border-2 rounded-lg h-4 border-red-400"></div>

                </div>
            </div>
            <div class="border-b border-gray-400 mt-5"></div>


            <!-- Location Filters -->
            <div class="mt-3">
                <div class="color flex justify-between font-sans text-gray-800 items-center">
                    <p class="font-semibold text-base">Location</p>
                    <i class="fa-solid fa-chevron-up text-gray-800"></i>

                </div>

                <div class="py-4 ml-3">
                    <!-- Checkbox List -->
                    <div class="space-y-2" id="cityList">

                    </div>
                    <span class="ml-2 mt-4 block text-blue-400 hover:underline cursor-pointer" id="show-more-cities">View More</span>

                </div>
                <div class="border-b border-gray-400 mt-3"></div>
            </div>

            <!-- Education Filters -->
            <div class="mt-3">
                <div class="color flex justify-between font-sans text-gray-800 items-center">
                    <p class="font-semibold text-base">Work Mode</p>
                    <i class="fa-solid fa-chevron-up text-gray-800"></i>

                </div>

                <div class="py-4 ml-3">
                    <!-- Checkbox List -->
                    <div class="space-y-2">
                        <div class="flex items-center">
                            <input type="checkbox" id="loc1" class="custom-checkbox" />
                            <label for="loc1" class="text-gray-800">Hybrid <span
                                    class="text-gray-400">(145)</span></label>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" id="loc2" class="custom-checkbox" />
                            <label for="loc2" class="text-gray-800">Office
                                <span class="text-gray-400">(78)</span></label>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" id="loc3" class="custom-checkbox" />
                            <label for="loc3" class="text-gray-800">Remote <span
                                    class="text-gray-400">(95)</span></label>
                        </div>
                    </div>
                </div>
                <div class="border-b border-gray-400 mt-3"></div>
            </div>

            <div class="mt-3">
                <div class="color flex justify-between font-sans text-gray-800 items-center">
                    <p class="font-semibold text-base">Education</p>
                    <i class="fa-solid fa-chevron-up text-gray-800"></i>

                </div>

                <div class="py-3 ml-3">
                    <!-- Checkbox List -->
                    <div class="space-y-2" id="educationList">

                    </div>
                </div>
                <div class="border-b border-gray-400 mt-3"></div>
            </div>

            <!-- Experience Filters -->
            <div class="mt-3">
                <div class="color flex justify-between px-1 font-sans text-base text-gray-800 items-center">
                    <p class="font-semibold">Experience Level</p>
                    <i class="fa-solid fa-chevron-up text-gray-800"></i>

                </div>

                <div class="py-3 ml-3">
                    <!-- Checkbox List -->
                    <div class="space-y-2">
                        <div class="flex items-center">
                            <input type="checkbox" id="exp1" class="custom-checkbox" />
                            <label for="exp1" class="text-gray-800">Entry Level <span
                                    class="text-gray-400">(80)</span></label>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" id="exp2" class="custom-checkbox" />
                            <label for="exp2" class="text-gray-800">Mid Level <span
                                    class="text-gray-400">(120)</span></label>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" id="exp3" class="custom-checkbox" />
                            <label for="exp3" class="text-gray-800">Senior Level <span
                                    class="text-gray-400">(45)</span></label>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" id="exp4" class="custom-checkbox" />
                            <label for="exp4" class="text-gray-800">Director <span
                                    class="text-gray-400">(22)</span></label>
                        </div>
                    </div>
                </div>
                <div class="border-b border-gray-400 mt-3"></div>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="lg:w-3/4 bg-gray-100 rounded-xl px-5 pb-6 overflow-y-scroll scroll-smooth custom-scroll" id="card-section">

           


        </div>
        <button class="fixed bottom-4 right-4 w-14 h-14 z-10 filled-button-color rounded-full sm:hidden"
            id="mobile-filter-btn">
            <i class="fa-solid fa-filter text-gray-100"></i>
        </button>

    </div>
</section>
